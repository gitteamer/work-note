{
    "git.ignoreWindowsGit27Warning": true,
    "go.formatTool": "default",
    "go.gopath": "D:\\go",
    "go.goroot": "C:\\Program Files\\Go",
    "go.toolsManagement.autoUpdate": true,
    "go.useLanguageServer": true,
    //关闭rg.exe进程 用cnpm导致会出现rg.exe占用内存很高
    "search.followSymlinks": false,
    "explorer.excludeGitIgnore": true,
    "explorer.compactFolders": false,
    // 编辑器颜色主题
    "workbench.colorTheme": "Monokai Pro New",
    // 资源管理器图标主题
    "workbench.iconTheme": "Monokai Pro Icons",
    // 资源管理器的树形目录层级距离、控制树缩进(以像素为单位)。
    "workbench.tree.indent": 20,
    // 资源管理器 控制树是否应呈现缩进参考线。
    "workbench.tree.renderIndentGuides": "always",
    // 缩进参考线的颜色
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#008070"
    },
    "workbench.view.alwaysShowHeaderActions": true,
    // 字体大小
    "editor.fontSize": 16,
    //"editor.fontFamily": "'Droid Sans Mono', 'Courier New', 'monospace', 'Droid Sans Fallback'",
    // 编辑器字体
    "editor.fontFamily": "'JetBrains Mono'",
    // Ctrl+鼠标滚动：缩放字体大小
    "editor.mouseWheelZoom": true,
    //vscode设置的缩进量
    //"editor.tabSize": 4,
    "editor.tokenColorCustomizations": {
        //"comments": "#55aa7f",
        //"keywords": "#ff55ff",
        //"variables": "#a792e2", 
        //"strings": "#00ff7f",
        //"functions": "#ffff00",
        //"numbers": "#00eeff",
        //"types": "#55bbff",
        //文本匹配规则
        // "textMateRules": [
        //     {
        //         "scope": "entity.name.type", //函数和类的名称颜色
        //         "settings": {
        //             "foreground": "#14fff3",
        //         }
        //     },
        // ]
        "[Monokai Night]": {
            //"comments": "#ff6600",
            //"functions": "#FF0000",
            //"keywords": "#FF0000",
            //"numbers": "#FF0000",
            //"strings": "#FF0000",
            //"types": "#FF0000",
            //"variables": "#FF0000",
            "textMateRules": [
                {
                    // 包名
                    "scope": "entity.name.package.go",
                    "settings": {
                        "foreground": "#FD971F"
                    }
                },
                {
                    // 引入包名的别名
                    "scope": "entity.alias.import.go",
                    "settings": {
                        "foreground": "#FD971F"
                    }
                },
                {
                    // 包名使用的地方
                    "scope": "punctuation.other.period.go",
                    "settings": {
                        "foreground": "#FD971F"
                    }
                },
                {
                    // 定义的变量
                    "scope": "variable.other.declaration.go",
                    "settings": {
                        "foreground": "#A6E22E"
                    }
                },
                {
                    // 赋值初始化的变量
                    "scope": "variable.other.assignment.go",
                    "settings": {
                        "foreground": "#A6E22E"
                    }
                },
                {
                    // string类型
                    "scope": "storage.type.string.go",
                    "settings": {
                        "foreground": "#F92672"
                    }
                },
                {
                    // bool类型
                    "scope": "storage.type.boolean.go",
                    "settings": {
                        "foreground": "#F92672"
                    }
                },
                {
                    // 函数
                    "scope": "entity.name.function.go",
                    "settings": {
                        "foreground": "#66D9EF"
                    }
                },
                {
                    // 结构体
                    "scope": "entity.name.type.go",
                    "settings": {
                        "foreground": "#4584A5"
                    }
                },
                {
                    "scope": "keyword.operator",
                    "settings": {
                        "foreground": "#FF0000"
                    }
                }
            ]
        },
    },
    // 失去焦点自动保存
    "files.autoSave": "onFocusChange",
    "editor.quickSuggestionsDelay": 0,
    // 输入一行代码后自动格式化该行
    "editor.formatOnType": true,
    // 保存文件是，格式化代码
    "editor.formatOnSave": true,
    // 终端的字体。editor.fontFamily这个是全局字体，终端可能不兼容，则可以单独设置
    "terminal.integrated.fontFamily": "'Droid Sans Mono', 'Courier New', 'monospace', 'Droid Sans Fallback'",
    "[go]": {
        "editor.formatOnType": true,
        //"editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.snippetSuggestions": "none",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.suggest.snippetsPreventQuickSuggestions": false
    },
    "gopls": {},
}